# Application
APP_NAME=AutoQ
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://autoq_user:autoq_password@localhost:5432/autoq_db
# For SQLite (development): sqlite:///./autoq.db

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=pdf

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# NLP Models
SPACY_MODEL=en_core_web_sm
TRANSFORMERS_MODEL=distilbert-base-uncased
USE_GPU=False

# Question Generation Settings
DEFAULT_QUESTIONS_PER_PAPER=20
MIN_QUESTION_LENGTH=10
MAX_QUESTION_LENGTH=500

# Export Settings
INSTITUTION_NAME=Your Institution Name
INSTITUTION_LOGO=./assets/logo.png
DEFAULT_PAPER_TEMPLATE=standard

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@autoq.edu

# Security
ENABLE_ENCRYPTION=True
LOCAL_PROCESSING_ONLY=False
